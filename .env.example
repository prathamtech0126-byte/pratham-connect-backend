# Required
NODE_ENV=production
PORT=5000
DATABASE_URL=postgresql://user:password@host:5432/dbname
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars

# Frontend + CORS
FRONTEND_URL=https://your-frontend-domain.com
# Optional: extra allowed origins (comma-separated). Used in production allowlist.
CORS_ORIGINS=https://your-frontend-domain.com,https://another-frontend.com

# CSRF (cookie auth): on login/refresh backend returns `csrfToken`.
# Frontend must send it on every non-GET request:
#   X-CSRF-Token: <csrfToken>

# Optional: Socket.IO debug logs (dev only)
SOCKET_DEBUG=false

# Optional: Redis (app works without it; cache disabled)
REDIS_URL=redis://:password@host:6379
# Or:
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Google Sheets
# GOOGLE_SHEET_ID=
# GOOGLE_SERVICE_ACCOUNT_EMAIL=
# GOOGLE_PRIVATE_KEY=
# GOOGLE_SHEET_RANGE=Sheet1!A1:Z1000

# Optional: message cleanup
# MESSAGE_CLEANUP_MODE=production
# MESSAGE_RETENTION_DAYS=365
# MESSAGE_CLEANUP_CRON=0 0 * * *
# TZ=UTC
